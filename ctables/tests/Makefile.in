#
# run some tests
#
# $Id$
#

# default 
TCLSH_ENV       = TCL_LIBRARY=`@CYGPATH@ @TCL_SRC_DIR@/library` \
                  @LD_LIBRARY_PATH_VAR@="@TCL_BIN_DIR@:$(@LD_LIBRARY_PATH_VAR@)" \
                  PATH="@TCL_BIN_DIR@:$(PATH)" \
                  TCLLIBPATH=".."
TCLSH_PROG      = @TCLSH_PROG@
TCLSH           = $(TCLSH_ENV) $(TCLSH_PROG)
TCLSHM          = $(TCLSH)

# With full memory debugging
#TCLSH=tclsh8.4m
#TCLSHM=$(TCLSH)

# With shared memory debugging
#TCLSH=tclsh8.4
#TCLSHM=$(TCLSH)m

all: maintests macip allstapi

maintests:
	rm -rf stobj
	$(TCLSH) speedtable.tcl
	$(TCLSH) serious-tests.tcl
	$(TCLSH) incr-test.tcl
	$(TCLSH) all-field-types.tcl
	$(TCLSH) reset-test.tcl
	$(TCLSH) tsv-nokey-tests.tcl
	$(TCLSH) tsv-tests.tcl
	$(TCLSH) new-tests.tcl
	$(TCLSH) key-tests.tcl
	$(TCLSH) trans-tests.tcl
	$(TCLSH) poll-tests.tcl
	$(TCLSH) multitable-tests.tcl
	$(TCLSH) null-tests.tcl
	rm -r stobj
	$(TCLSH) index-compare.tcl
	rm -rf stobj
	$(TCLSH) index-defaults.tcl
	$(TCLSH) filter.tcl
	$(TCLSH) filter2.tcl
	$(TCLSH) tclobj.tcl
	$(TCLSH) match-fail-test.tcl

clean:
	rm -rf stobj
	rm -f *.dat
	rm -f *.core vgcore*
	rm -f tmp_*


pgtests:
        $(TCLSH) pgtcl.tcl
        $(TCLSH) stapi_pg.tcl

compare:
	rm -rf stobj
	$(TCLSH) index-compare.tcl

macip:
	rm -rf stobj
	$(TCLSH) mac-ip-test.tcl

null:
	rm -rf stobj
	$(TCLSH) null-tests.tcl

indef:
	rm -rf stobj
	$(TCLSH) index-defaults.tcl

master:
	rm -rf stobj
	rm -f *.dat
	$(TCLSH) tsv-nokey-tests.tcl
	$(TCLSHM) master.tcl
	$(TCLSHM) master2.tcl
	rm -f *.dat

speed:
	rm -rf stobj
	rm -f *.dat
	$(TCLSH) masterspeed.tcl

pools:
	rm -rf stobj
	rm -f *.dat
	$(TCLSH) poolspeed.tcl

allstapi: stapi multishared stapireturn
	rm -f serverlog_multimaster.log sharefile.dat

reader:
	rm -rf stobj
	rm -f *.dat
	sh master+reader.sh
	rm -f *.dat

stapi:
	rm -rf stobj
	rm -f *.dat
	sh stapi.sh
	rm -f *.dat

stapi2:
	rm -rf stobj
	rm -f *.dat
	sh stapi.sh -d 100 -c 40 -s stapi2.tcl
	rm -f *.dat

stapi3:
	rm -rf stobj
	rm -f *.dat
	sh stapi.sh -d 1 -c 40 -s stapi3.tcl
	rm -f *.dat

filter:
	rm -rf stobj
	$(TCLSH) filter.tcl

filter2:
	rm -rf stobj
	$(TCLSH) filter2.tcl

multishared:
	sh multimaster.sh

multireader:
	rm -rf stobj
	rm -f *.dat
	sh multireader.sh
	rm -f *.dat

speedreader:
	rm -rf stobj
	rm -f *.dat
	sh multireader.sh 1 1000000 5 10
	rm -f *.dat

readerperf:
	rm -rf stobj
	rm -f *.dat
	sh readerperf.sh
	rm -f *.dat

tclobj:
	rm -rf stobj
	$(TCLSH) tclobj.tcl

barnrow:
	rm -rf stobj
	rm -f *.dat
	$(TCLSH) barnrow.tcl

gbarnrow:
	rm -rf stobj
	rm -f *.dat
	gdb $(TCLSH)

matchfail:
	rm -rf stobj
	$(TCLSH) match-fail-test.tcl

stapireturn:
	rm -rf stobj
	rm -f *.dat
	sh stapi.sh -s stapireturn.tcl
